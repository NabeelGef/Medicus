<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Biomarker_Details">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10ssp"
            android:text="@string/biomarker_details"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_25ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/category"
                    android:layout_width="@dimen/_30ssp"
                    android:layout_height="@dimen/_10ssp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/rectangle_border"
                    android:textSize="@dimen/_5ssp" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
                <TextView
                    android:id="@+id/symbol_details"
                    android:layout_width="@dimen/_50ssp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@android:color/black" />
<Button
    android:layout_width="@dimen/_15sdp"
    android:layout_height="@dimen/_15sdp"
    android:id="@+id/click_info"
    android:background="@drawable/info"/>
</LinearLayout>
                <TextView
                    android:id="@+id/date_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp" />
            </LinearLayout>

            <Button
                android:id="@+id/symbol_details_button"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/circle_border" />
        </LinearLayout>

        <TextView
            android:id="@+id/value_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_100sdp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="@string/info"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_15sdp" />

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/info_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="@string/insights"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_15sdp" />

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/insights_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>